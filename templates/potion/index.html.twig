{% extends 'base.html.twig' %}

{% block title %}Potion index{% endblock %}

{% block body %}
    <h1>Potion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Vie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for potion in potions %}
            <tr>
                <td>{{ potion.id }}</td>
                <td>{{ potion.Vie }}</td>
                <td>
                    <a href="{{ path('potion_show', {'id': potion.id}) }}">show</a>
                    <a href="{{ path('potion_edit', {'id': potion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('potion_new') }}">Create new</a>
{% endblock %}
